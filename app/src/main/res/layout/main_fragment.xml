<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/mainText"
        android:layout_width="320dp"
        android:layout_height="144dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Смейся \n и улыбайся\n каждый день"
        android:textColor="#5D5FEF"
        android:textSize="40sp"
        android:layout_marginTop="382dp"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/face"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="122dp"/>

    <Button
        android:id="@+id/startRegister"
        android:layout_width="320dp"
        android:layout_height="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainText"
        android:layout_marginTop="64dp"
        android:clickable="true"
        android:text="Начать пользоваться"
        android:textSize="16sp"
        android:focusable="true" />
    <TextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/startRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Есть аккаунт? Войти"
        android:clickable="true"
        android:textSize="16sp"
        android:textColor="#292929"
        android:layout_marginTop="21dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>